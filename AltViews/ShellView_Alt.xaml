<UserControl x:Class="SteinbachCRM.Views.ShellView_Alt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cal="http://www.caliburnproject.org"


    mc:Ignorable="d" 
             Height="Auto" Width="Auto"
             MinHeight="800" MinWidth="1500">
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="ShowNavigation" Content="Naviagtion"  />
            <Button x:Name="ShowKundendaten" Content="Kundendaten"  />

            <Button x:Name="ShowFirmen" Content="Firmendaten" />

        </StackPanel>
        
        <ContentControl x:Name="ActiveItem" Grid.Row="1" Grid.Column="1" />

    </Grid>
</UserControl>
